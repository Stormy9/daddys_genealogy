<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="our_body">
    <div class="navbar navbar-inverse navbar-fixed-top our_nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HolmanBerg", "Index", "Home", new { area = "" },
                                            new { @class = "navbar-brand our_nav_a" } )
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("About", "About", "Home", new { @class = "our_nav_a" },
                                            new { style = "color: #e6ffe6;" } )
                    </li>
                    <!-- stupid fucking style crap again! -->
                    <li>
                        @Html.ActionLink("Contact", "Contact", "Home", new { @class = "our_nav_a" },
                                            new { style = "color: #e6ffe6;" } )
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <!--==============================================================================-->
    <div>
        @RenderBody()
        <footer class="our_foot">
            <p> 
                &copy; @DateTime.Now.Year - HolmanBerg | built by 
                <a href="mailto:nerdvana.dev.team@gmail.com" class="our_nav_a">Nerdvana </a> 
            </p>
        </footer>
    </div>
    <!--==============================================================================-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!--==============================================================================-->
</body>
</html>
